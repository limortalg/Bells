<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/lesson_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/subject_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <EditText
        android:id="@+id/teacher_group_input"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:hint="תיאור"
        android:inputType="text" />


    <ImageButton
        android:id="@+id/speech_input_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_btn_speak_now"
        android:contentDescription="@string/description_for_icon"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <EditText
        android:id="@+id/building_input"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="בניין"
        android:inputType="text" />

    <EditText
        android:id="@+id/room_input"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="חדר"
        android:inputType="text" />

    <ImageView
        android:id="@+id/set_photo_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Teacher Photo"
        android:src="@android:drawable/ic_menu_camera" />

    <!--<Button
        android:id="@+id/set_photo_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="תמונה" />-->

</LinearLayout>
